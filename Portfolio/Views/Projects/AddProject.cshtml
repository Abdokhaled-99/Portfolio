@model Portfolio.ViewModels.ProjectFormViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Hire me - Brand</title>
    <meta property="" content="">
</head>

<body style="background: rgb(255,255,255);">
    <main class="page hire-me-page">
        <section class="portfolio-block hire-me">
            <div class="container">
                <div class="heading">
                    <h2>Add Project</h2>
                </div>

                @using (Html.BeginForm("Save", "Projects", FormMethod.Post, new {enctype = "multipart/form-data"}))
                {
                <div class="form-group">
                    @Html.LabelFor(m=>m.File)
                    @Html.TextBoxFor(m => m.File, new { type = "file",@class="form-control"})
                    @Html.ValidationMessageFor(m => m.File)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="form-row">
                        @* <div class="col-md-6 button"><input class="form-control" type="date"></div> *@
                        <div class="col"><button class="btn btn-primary btn-block" type="submit">Save</button></div>
                    </div>
                </div>
                }
            </div>
        </section>
    </main>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

</body>

</html>